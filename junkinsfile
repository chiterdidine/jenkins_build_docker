node{
def app
stage ('Clone') {
checkout scm
}
stage('Build image') {
app = docker.build("xavki/nginx")
}
stage('Run image') { 
docker.image('xavki/nginx').withRun('-p 90:90') { c->
sh 'docker ps'
sh 'curl localhost'
}
stage('Push') { 
docker.withRegistry('https://github.com/chiterdidine/jenkins_build_docker'){
img.push 'latest'
img.push()
}
}
}
}
